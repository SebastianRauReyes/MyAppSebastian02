<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.sebastian.myappsebastian02.SplashActivity">

    <!-- Scroll Bar-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Relative Layout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Top Image-->
            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:src="@drawable/bg_residentevilseven"/>

            <!-- Tittle-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:gravity="center"
                android:text="Resident Evil 7"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:textSize="40dp"
                tools:fontFamily="casual" />

            <!-- Flex box Layout 1-->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flex1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imageView"
                app:flexDirection="row"
                app:justifyContent="space_around"
                app:flexWrap="nowrap"
                android:background="@drawable/bg_wood">

                <!-- Card view 1-->
                <!-- .................................................................. -->
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/bg_cardview2">

                        <ImageView
                            android:id="@+id/img1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_eveline" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/img1">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Eveline"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"/>

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                app:borderWidth="0dp"
                                android:src="@mipmap/ic_vertical_more_3"
                                android:clickable="true"
                                android:focusable="true"/>

                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!-- Card view 2-->
                <!-- .................................................................. -->
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/bg_cardview2">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_lucas" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/img2">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Lucas"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"/>

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                app:borderWidth="0dp"
                                android:src="@mipmap/ic_vertical_more_3"
                                android:clickable="true"/>

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <!-- Card view 3-->
                <!-- .................................................................. -->
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/bg_cardview2">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_jack" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/img3">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Jack"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"/>

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                app:borderWidth="0dp"
                                android:src="@mipmap/ic_vertical_more_3"
                                android:clickable="true"/>
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <!-- Card view 4-->
                <!-- .................................................................. -->
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:background="@drawable/bg_cardview2">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_marg" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/img4">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Marguerite"
                                android:textAlignment="center"
                                android:textColor="#ffffff"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:layout_weight="1"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"/>

                            <android.support.design.widget.FloatingActionButton
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                app:borderWidth="0dp"
                                android:src="@mipmap/ic_vertical_more_3"
                                android:clickable="true"/>

                        </LinearLayout>

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

            </com.google.android.flexbox.FlexboxLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>
